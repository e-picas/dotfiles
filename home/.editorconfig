root = true

[*]
end_of_line = lf
charset = utf-8

[*.{md,mde,mdown,markdown}]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.{php,css,less,sass}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sh,bash}]
indent_style = space
indent_size = 4
insert_final_newline = true

# vim: autoindent tabstop=4 shiftwidth=4 expandtab softtabstop=4 filetype=ini
