# Turn on extended globbing and programmable completion
shopt -s extglob progcomp

# Make directory commands see only directories
complete -d pushd

# personal completions
_perso()
{
    local cur prev
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    MYCOMPLETIONS=()

    COMPREPLY=( $(compgen -W "${MYCOMPLETIONS[@]}" -- "$cur") )
}
complete -F _perso perso

# the note/cheatsheet completions
if [ "$(type -t _note_completion)" = 'function' ]; then
    complete -o nospace -F _note_completion note
    complete -o nospace -F _note_completion cheatsheet
fi

# user per-device external files
[ -r "${HOME}/.bash_completions_alt" ] && source "${HOME}/.bash_completions_alt";

# Endfile
