{
	"name": "dev-env-composer",
	"description": "Development environment.",
	"homepage": "http://github.com/e-picas/dotfiles",
    "require": {
        "php": ">=5.3.2",
        "lib-curl": "*",
        "lib-iconv": "*",
        "lib-openssl": "*",
        "lib-pcre": "*",
        "ext-curl": "*",
        "ext-date": "*",
        "ext-exif": "*",
        "ext-gd": "*",
        "ext-gettext": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-mcrypt": "*",
        "ext-mysql": "*",
        "ext-mysqli": "*",
        "ext-openssl": "*",
        "ext-pcre": "*",
        "ext-Phar": "*",
        "ext-posix": "*",
        "ext-soap": "*",
        "ext-SPL": "*",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "ext-xmlrpc": "*",
        "piwi/composer-symlinker": "dev-master"
    },
    "require-dev": {
        "psr/log": "1.0.*",
        "twig/twig": "@stable",
        "sami/sami": "@stable",
        "phpunit/phpunit": "@stable",
        "phpmd/phpmd" : "@stable",
        "composer/composer": "1.*",
		"phing/phing": "@stable",
		"pdepend/pdepend": "@stable",
		"squizlabs/php_codesniffer": "@stable",
        "fabpot/php-cs-fixer": "@stable",
		"atelierspierrot/patterns": "1.*",
		"atelierspierrot/library": "1.*",
		"atelierspierrot/validators": "1.*",
		"atelierspierrot/reflectors": "1.*",
		"atelierspierrot/maths": "1.*",
		"atelierspierrot/cryptography": "1.*@dev",
		"atelierspierrot/internationalization": "1.*",
		"atelierspierrot/service-container": "1.*",
		"atelierspierrot/event-manager": "1.*",
		"atelierspierrot/http-fundamental": "1.*",
		"atelierspierrot/mvc-fundamental": "1.*",
		"atelierspierrot/assets-manager": "1.*",
		"atelierspierrot/templatengine": "1.*",
		"atelierspierrot/assets-library": "1.*",
		"atelierspierrot/assets-bootstrapper": "1.*",
		"atelierspierrot/devdebug": "1.*",
		"atelierspierrot/mime-mailer": "1.*",
		"atelierspierrot/webfilesystem": "1.*",
		"atelierspierrot/media-processing": "1.*",
		"atelierspierrot/webservices": "1.*",
		"atelierspierrot/git-api": "1.*",
		"atelierspierrot/devdebug": "1.*",
		"atelierspierrot/famfamfam-silk-sprite": "1.*",
		"atelierspierrot/famfamfam-flags-sprite": "1.*",
		"atelierspierrot/gentleface-sprites": "1.*",
		"atelierspierrot/web-syndication-analyzer": "1.*@dev",
		"atelierspierrot/demo-builder": "dev-master",
		"atelierspierrot/docbook": "1.*",
		"piwi/html5-quick-template": "dev-master",
		"piwi/bootstrap-companion": "dev-master",
		"piwi/markdown-extended": "dev-master",
		"piwi/mde-service": "dev-master",
		"piwi/php-quick-lib": "dev-master",
		"wdbo/webdocbook": "dev-master",
		"carte-blanche/carte-blanche": "dev-master",
		"carte-blanche/core": "dev-master",
		"carte-blanche/installer": "dev-master",
		"carte-blanche/tool-defaults": "dev-master",
		"carte-blanche/tool-form": "dev-master",
		"carte-blanche/bundle-crud": "dev-master",
		"carte-blanche/bundle-cms": "dev-master",
		"carte-blanche/bundle-gitviewer": "dev-master",
		"carte-blanche/bundle-dirindexer": "dev-master",
		"carte-blanche/bundle-galleries": "dev-master",
		"carte-blanche/bundle-mailer": "dev-master",
		"carte-blanche/bundle-unittest": "dev-master",
		"atelierspierrot/project-init": "1.*",
		"atelierspierrot/project-init-wordpress": "1.*"
    },
	"repositories": [
		{ "type": "pear", "url": "http://pear.php.net" },
		{ "type": "composer", "url": "http://packagist.ateliers-pierrot.fr/" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/carteblanche" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/core" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/installer" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/bundle-crud" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/bundle-cms" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/bundle-gitviewer" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/bundle-dirindexer" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/bundle-mailer" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/bundle-unittest" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/bundle-galleries" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/tools" },
		{ "type": "vcs", "url": "https://github.com/php-carteblanche/tool-form" },
		{ "type": "vcs", "url": "https://github.com/e-picas/html5-quick-template" },
		{ "type": "vcs", "url": "https://github.com/e-picas/bootstrap-companion" },
		{ "type": "vcs", "url": "https://gitlab.com/atelierspierrot/project-init" },
		{ "type": "vcs", "url": "https://gitlab.com/atelierspierrot/project-init-wordpress" }
    ],
    "autoload-dev": {
        "files": [ "bootstrap.php" ]
    },
	"minimum-stability": "dev",
	"archive": {
		"exclude": [ "*build", "*dev", "*phpdoc", "*tmp*" ]
	},
    "scripts": {
        "post-autoload-dump": [
            "Assets\\Composer\\TemplateEngineInstaller::postAutoloadDump"
        ],
        "post-install-cmd": [
            "npm install",
            "bower install"
        ],
        "post-update-cmd": [
            "npm update",
            "bower install"
        ],
        "cs-fixer": [
            "php ./vendor/bin/php-cs-fixer fix . --level=psr2 --verbose"
        ]
    },
	"config": {
		"use-include-path": true,
		"store-auths": true,
		"optimize-autoloader": true,
		"discard-changes": "stash",
		"cache-dir": "tmp/cache/",
		"vendor-dir": "projects",
		"bin-dir": "bin"
	},
    "extra": {
		"assets-dir": "www",
		"doc-dir": "doc",
		"i18n-dir": "var/i18n",
		"config-dir": "var/config",
		"assets-vendor-dir": "vendor",
        "document-root": ".",
        "local-dirs": "projects",
        "local-packages": {},
        "local-vendors": [ "atelierspierrot", "piwi", "wdbo", "markdown-extended", "php-carteblanche" ]
    }
}
